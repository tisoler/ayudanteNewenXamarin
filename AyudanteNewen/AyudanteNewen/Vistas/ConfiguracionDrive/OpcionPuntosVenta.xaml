<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AyudanteNewen.Vistas.OpcionPuntosVenta"
			 Title="Ayudante Newen">

    <ContentPage.Content>
        <StackLayout Spacing="0" Padding="0" BackgroundColor="#EDEDED">
            <StackLayout Spacing="0" Padding="0" Orientation="Horizontal">
                <Image x:Name="SombraEncabezado" HorizontalOptions="FillAndExpand" Aspect="AspectFill"></Image>
            </StackLayout>
			<StackLayout BackgroundColor="#C0C0C0" VerticalOptions="Start" HorizontalOptions="Fill">
				<Label FontSize="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" HeightRequest="30">¿Configurar lugar de compra o venta?</Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
				<Button HorizontalOptions="FillAndExpand" VerticalOptions="End" Text="Sí, poseo 1 hoja con lista de lugares" HeightRequest="100" Clicked="SeleccionarHojaPtosVtas"/>
			</StackLayout>
			<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
				<Button HorizontalOptions="FillAndExpand" VerticalOptions="Start" Text="No, no quiero configurarlo" HeightRequest="100" Clicked="IrSeleccionColumnas"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>

</ContentPage>